String branchName = "main"
String repoUrl = "https://github.com/zensarsuman/JenkinsAndDockerAssessment.git"
pipeline {
    agent any
    
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/zensarsuman/JenkinsAndDockerAssessment.git'
            }
        }
        
        stage('Compile Java Code') {
            steps {
                sh 'javac Hello.java'
            }
        }
        
        stage('Run Java Program') {
            steps {
                sh 'java Hello'
            }
        }
    }
}
